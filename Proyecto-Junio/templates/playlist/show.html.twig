{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ playlist.nombre }}</h1>

        <div class="row">
            {% for cancion in playlist.cancionId %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card">
                        <img src="{{ asset('images/' ~ cancion.foto) }}" class="card-img-top img-fluid" alt="{{ cancion.titulo }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ cancion.titulo }}</h5>
                            <p class="card-text">{{ cancion.autor }}</p>
                            <audio controls style="width: 100%">
                                <source src="{{ asset('music/' ~ cancion.audio)}}" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('app_playlist_index') }}" class="btn btn-primary mt-3">Volver a la lista</a>

    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}" class="btn btn-secondary mt-3">Editar</a>

    {{ include('playlist/_delete_form.html.twig') }}
{% endblock %}