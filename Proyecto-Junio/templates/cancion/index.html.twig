{% extends 'base.html.twig' %}

{% block title %}Canciones{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            {% for cancion in cancions %}
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <div style="overflow: hidden; max-height: 300px;">
                            <img src="{{ asset('images/' ~ cancion.foto) }}" class="card-img-top img-fluid" alt="{{ cancion.titulo }}">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mb-0">{{ cancion.titulo }}</h5>
                            <p class="card-text text-muted">{{ cancion.autor }}</p>
                            <audio controls style="width: 100%">
                                <source src="{{ asset('music/' ~ cancion.audio)}}" type="audio/mpeg">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-center">No se encontraron canciones.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}